{
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "terraform"
  ],
  "terraform": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/modules/root/.*\\.tf$/"
      ],
      "matchStrings": [
        "source\\s*=\\s*\"git::https://github.com/VStefanov/tf.git//modules/(?<module>[^?]+)\\?ref=(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "github.com/VStefanov/tf.git//modules/{{module}}",
      "datasourceTemplate": "terraform-module",
      "versioningTemplate": "semver"
    }
  ]
}
