{
  "extends": ["config:base"],
  "enabledManagers": ["terraform"],
  "terraform": {
    "enabled": true
  },
  "regexManagers": [
    {
      "fileMatch": ["modules/root/.*\\.tf$"],
      "matchStrings": [
        "source\\s*=\\s*\"git::https://github.com/VStefanov/tf.git//modules/(?<module>[^?]+)\\?ref=(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "{{module}}",
      "lookupNameTemplate": "VStefanov/tf",
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "semver",
      "extractVersion": "{{version}}",
      "tagMatch": "^{{module}}-(?<version>\\d+\\.\\d+\\.\\d+)$"
    }
  ]
}
