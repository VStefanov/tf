{
  "extends": ["config:base"],
  "enabledManagers": ["terraform"],
  "terraform": {
    "enabled": true
  },
  "regexManagers": [
    {
      "fileMatch": ["modules/root/.*\\.tf$"],
      "matchStrings": [
        "source\\s*=\\s*\"git::https://github.com/VStefanov/tf.git//modules/(?<module>[^?]+)\\?ref=(?<currentValue>\\w+-v\\d+\\.\\d+\\.\\d+)\""
      ],
      "depNameTemplate": "github.com/VStefanov/tf.git//modules/{{module}}",
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "loose"
    }
  ]
}