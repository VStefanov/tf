{
  "extends": ["config:base"],
  "enabledManagers": ["terraform"],
  "terraform": {
    "enabled": true
  },
  "labels": ["renovate"],
  "packageRules": [
    {
      "description": "Update EC2 submodule when it changes",
      "matchPaths": ["modules/ec2/**"],
      "matchDatasources": ["terraform-module"],
      "matchPackageNames": ["ec2"],
      "groupName": "EC2 Module Updates"
    },
    {
      "description": "Update RDS submodule when it changes",
      "matchPaths": ["modules/rds/**"],
      "matchDatasources": ["terraform-module"],
      "matchPackageNames": ["rds"],
      "groupName": "RDS Module Updates"
    }
  ],
  "dependencyDashboard": true
}
