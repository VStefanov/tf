{
  "extends": ["config:base"],
  "enabledManagers": ["terraform"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["modules/root/.*\\.tf$"],
      "matchStrings": [
        "source\\s*=\\s*\"git::https://github\\.com/VStefanov/tf\\.git//modules/(?<module>[^?]+)\\?ref=(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "{{module}}-submodule",
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "semver",
      "extractVersionTemplate": "^{{module}}-v(?<version>\\d+\\.\\d+\\.\\d+)$"
    }
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["-submodule$"],
      "groupName": "Updated Terraform submodules",
      "groupSlug": "terraform-submodules",
      "addLabels": ["terraform", "submodule"],
      "commitMessageTopic": "Terraform submodule versions"
    }
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 10
}
