{
  "extends": ["config:base"],
  "enabledManagers": ["terraform"],
  "terraform": {
    "enabled": true
  },
  "ignoreUnstable": false,
  "branchTopic": "",
  "regexManagers": [
    {
      "fileMatch": ["modules/root/.*\\.tf$"],
      "matchStrings": [
         "source\\s*=\\s*\"git::https://github.com/VStefanov/tf.git//modules/(?<module>[^?]+)\\?ref=(?<currentValue>(?<prefix>\\w+)-v(?<version>\\d+\\.\\d+\\.\\d+))\""
      ],
      "depNameTemplate": "github.com/VStefanov/tf.git//modules/{{module}}",
      "datasourceTemplate": "terraform-module"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "matchPaths": ["modules/**/.*\\.tf$"],
      "extractVersion": "^(?<module>\\w+)-v(?<version>\\d+\\.\\d+\\.\\d+)$",
      "branchName": "{{{module}}}-v{{{version}}}"
    }
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 2
}