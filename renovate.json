{
  "extends": ["config:base"],
  "enabledManagers": ["terraform"],
  "terraform": {
    "enabled": true
  },
  "regexManagers": [
    {
      "fileMatch": ["modules/root/.*\\.tf$"],
      "matchStrings": [
        "source\\s*=\\s*\"git::https://github.com/VStefanov/tf.git//modules/(?<module>[^?]+)\\?ref=(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "github.com/VStefanov/tf.git//modules/{{module}}",
      "lookupNameTemplate": "VStefanov/tf//modules/{{module}}",
      "datasourceTemplate": "github-commits"
    }
  ]
}
